generator client {
  provider = "prisma-client-js"
  moduleFormat = "commonjs"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MuscleGroup { 
    CHEST 
    BACK
    SHOULDERS 
    LEGS 
    BICEPS 
    TRICEPS 
    CORE 
    FULLBODY 
    OTHER 
}

enum EffortUnit { 
    KG 
    LB 
}

enum SetIntensityType {
    NONE
    REST_PAUSE
    DROP_SET
    CLUSTER_SET
}

enum Feeling { 
    GREAT 
    GOOD 
    OKAY 
    BAD 
    TERRIBLE 
}

enum Role {
    USER
    ADMIN
}

model User {
  id                String              @id @default(uuid())
  email             String              @unique
  password          String
  name              String?
  height            Float?
  weight            Float?
  role              Role                @default(USER)
  pinnedExerciseIds String[]            @default([])
  createdAt         DateTime            @default(now())
  sessions          WorkoutSession[]
  templates         WorkoutTemplate[]
  exercises         Exercise[]
  timers            RestTimer[]
  resetTokens       PasswordResetToken[]
  measurements      BodyMeasurement[]
  sleeps            Sleep[]
}

model Exercise {
  id            String       @id @default(uuid())
  name          String       @unique
  muscleGroup   MuscleGroup?
  notes         String?
  isGlobal      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  createdById   String?
  createdBy     User?        @relation(fields: [createdById], references: [id])
  templateItems TemplateExercise[]
  sessionItems  SessionExercise[]
  @@index([name])
}

model WorkoutTemplate {
  id        String             @id @default(uuid())
  title     String
  notes     String?
  ownerId   String
  owner     User               @relation(fields: [ownerId], references: [id])
  items     TemplateExercise[]
  createdAt DateTime           @default(now())

  workoutSessions WorkoutSession[]
}

model TemplateExercise {
  id            String           @id @default(uuid())
  templateId    String
  template      WorkoutTemplate  @relation(fields: [templateId], references: [id], onDelete: Cascade)
  exerciseId    String
  exercise      Exercise         @relation(fields: [exerciseId], references: [id])
  order         Int              @default(0)
  notes         String?
  sets          TemplateSet[]
}

model TemplateSet {
  id           String           @id @default(uuid())
  templateExId String
  templateEx   TemplateExercise @relation(fields: [templateExId], references: [id], onDelete: Cascade)
  setIndex     Int
  reps         Int?
  rir          Int?
  notes        String?
}

model WorkoutSession {
  id        String            @id @default(uuid())
  title     String?
  userId    String
  user      User              @relation(fields: [userId], references: [id])
  templateId  String?
  template    WorkoutTemplate?  @relation(fields: [templateId], references: [id])
  startAt      DateTime          @default(now())
  endAt     DateTime?
  durationM Int?
  fatigue   Int?
  feeling   Feeling?
  notes     String?
  exercises SessionExercise[]
  createdAt DateTime          @default(now())
  @@index([userId, startAt])
}

model SessionExercise {
  id          String         @id @default(uuid())
  sessionId   String
  session     WorkoutSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  exerciseId  String
  exercise    Exercise       @relation(fields: [exerciseId], references: [id])
  order       Int            @default(0)
  notes       String?
  sets        SessionSet[]
}

model SessionSet {
  id            String          @id @default(uuid())
  sessionExId   String
  sessionEx     SessionExercise @relation(fields: [sessionExId], references: [id], onDelete: Cascade)
  setIndex      Int
  plannedLoad   Float?
  plannedReps   Int?
  plannedRir    Int?
  actualLoad    Float?
  actualReps    Int?
  actualRir     Int?
  unit          EffortUnit?     @default(KG)
  completed     Boolean         @default(false)
  notes         String?         
  intensityType SetIntensityType @default(NONE)

  intensityBlocks SessionSetIntensityBlock[]
}

model SessionSetIntensityBlock {
  id          String           @id @default(uuid())
  sessionSetId String
  sessionSet  SessionSet       @relation(fields: [sessionSetId], references: [id], onDelete: Cascade)
  blockIndex  Int
  reps        Int
  restSeconds Int?
  load        Float?

  @@index([sessionSetId, blockIndex])
}

model RestTimer {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  seconds     Int      // Duration in seconds
  isDefault   Boolean  @default(false) // To identify default system timers
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([token])
  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([token])
  @@index([email])
}

model AppConfig {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([key])
}

model BodyMeasurement {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  weight    Float
  waist     Float?
  arm       Float?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId, date])
}

model Sleep {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date          DateTime @default(now())
  sleepHours    Float
  sleepQuality  Int?
  sleepBedtime  DateTime?
  sleepWakeTime DateTime?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId, date])
}

